extends layout

block content
 h1= title
 - let gas = results;
 div(class="container-fluid")
  div(class="row m-1")
   each item in gas
      - let destination = `dispatch(\"/gas/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.gas_name}(#{item.smell}) is #{item.weight}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      
 script.
  function dispatch(path){
    window.location.href=path
  }