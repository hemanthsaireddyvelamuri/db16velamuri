extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let gasid = toShow._id 
    - let gas_name = toShow.name   
    - let smell = toShow.smell 
    - let weight = toShow.weight  
    - let actionid = "/resource/gas/" + gasid 
    script let actionid = "#{actionid}"

  div 
    div.row 
      div(class='gasAttr mr-3') gas ID is: 
      div #{ gasid } 
    div.row 
      div(class='gasAttr mr-3') gas name is: 
      div #{ gas_name } 
    div.row 
      div(class='gasAttr mr-3') gas smell is: 
      div #{ gassmell } 
    div.row 
      div(class='gasAttr mr-3') gas weight is: 
      div #{ gasweight }